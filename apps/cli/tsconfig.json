{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React Library",
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "es6",
    "noImplicitAny": false
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "rollup.config.js"]
}
